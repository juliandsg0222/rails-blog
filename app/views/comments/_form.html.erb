<%= form_with model: [ @article, @article.comments.build ] do |form| %>
<div class="form-group">
  <br>
  <h4><%= form.label :commenter %></h4>
  <%= form.text_field :commenter, class: 'form-control', value: current_user.name, readonly: true %>
</div>
<br>
<div class="form-group">
  <h4><%= form.label :comment %></h4>
  <%= form.text_area :body, class: 'form-control', size: '1x5' %>
</div>
<br>
<div class="form-group">
  <h6><%= form.label :status %></h6>
  <%= form.select(:status, ['public', 'private', 'archived'], {}, {class: 'form-select'}) %>
</div>
<br>
<div class="actions">
  <%= form.submit class: "btn btn-success" %>
</div>
<% end %>
