<div class="container" id="principal-container">
  <h1>This is the
    <%= @user.name %>'s profile
    <% unless !user_signed_in? || current_user == @user %>
      <% if @user.followers.include?(current_user) %>
        <%= link_to 'Unfollow', unfollow_user_path(@user), class: 'btn btn-warning fas fa-handshake-slash'%>
      <% else %>
        <%= link_to 'Follow', follow_user_path(@user), class: 'btn btn-warning fas fa-user-plus' %>
      <% end %>
    <% end %>
  </h1>
  <br>
  <h3>General information:</h3>
  <ul>
    <% if current_user == @user %>
      <li>
        <b>E-mail:</b>
        <%= @user.email %></li>
    <% end %>
    <li>
      <b>Member since:</b>
      <%= colombian_date(@user.created_at) %></li>
    <li>
      <b>Number of published articles:</b>
      <a href="<%= published_articles_user_path(@user) %>"><%= @user.articles.count %></a>
    </li>
    <li>
      <b>Number of followers:</b>
      <a href="<%= followers_user_path(@user) %>"><%= @user.followers_count %></a>
    </li>

    <li>
      <b>Number of followings:</b>
      <a href="<%= following_user_path(@user) %>"><%= @user.following_users_count %></a>
    </li>

  </ul>

</div>
